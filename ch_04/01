#include <iostream>
#include <string>
using namespace std;

class Person
{
	string name;
	int age;

public:
	void setPerson(string n, int a)
	{
		name = n;
		age = a;
	}
	void print()
	{
		cout << "이름 : "<< name <<"\n" << "나이 : "<< age << endl;

	}
};

int main()
{
	Person obj;

	obj.setPerson("김철수", 21);
	obj.print();

	return 0;
}
