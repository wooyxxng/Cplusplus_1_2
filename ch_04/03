#include <iostream>
using namespace std;

class Sum
{
	int n1, n2;

public:
	void init(int x, int y)
	{
		n1 = x;
		n2 = y;
	}
	int add()
	{
		return n1 + n2 ;
	}
};

int main()
{
	int n1, n2;
	cout << "첫 번째 정수 : ";
	cin >> n1;
	cout << "두 번째 정수 : ";
	cin >> n2;
	
	Sum obj;

	obj.init(n1, n2);
	cout << "연산 결과: " << obj.add() << endl;

	return 0;
}
