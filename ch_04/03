#include <iostream>
#include <string>
using namespace std;

class Sum
{
	int n1, n2;

public:
	void init(int x, int y)
	{
		n1 = x;
		n2 = y;
	}
	void add()
	{
		cout << "첫 번째 정수 : "<< n1 <<"\n"
			<< "두 번째 정수 : "<< n2 << "\n"
			<< "연산 결과 : " << n1+n2 << endl;
	}
};

int main()
{
	Sum obj;

	obj.init(10, 20);
	obj.add();

	return 0;
}
